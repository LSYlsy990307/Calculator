<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:orientation="vertical">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="简单计算"
        android:layout_marginLeft="310dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/display"
        android:maxLines="3"
        android:gravity="right|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="30sp"
        android:editable="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radiogroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/angle"
                android:text="角度制"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radian"
                android:text="弧度制"
                android:checked="true"/>

        </RadioGroup>

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/radiogroup"
            android:text="退格" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:layout_toRightOf="@id/delete"
            android:text="清屏"/>

    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="4"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/seven"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_column="1"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_column="2"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/divide"
            android:layout_column="3"
            android:layout_row="0"
            android:text="÷" />
        <Button
            android:id="@+id/mod"
            android:layout_column="4"
            android:layout_row="0"
            android:text="取余" />
        <Button
            android:id="@+id/mc"
            android:layout_column="5"
            android:layout_row="0"
            android:text="mc" />

        <Button
            android:id="@+id/four"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/multiply"
            android:layout_column="3"
            android:layout_row="1"
            android:text="×" />
        <Button
            android:id="@+id/integral"
            android:layout_column="4"
            android:layout_row="1"
            android:text="取整" />
        <Button
            android:id="@+id/mPlus"
            android:layout_column="5"
            android:layout_row="1"
            android:text="m+" />

        <Button
            android:id="@+id/one"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_column="2"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/minus"
            android:layout_column="3"
            android:layout_row="2"
            android:text="－" />
        <Button
            android:id="@+id/left"
            android:layout_column="4"
            android:layout_row="2"
            android:text="左移" />
        <Button
            android:id="@+id/mMinus"
            android:layout_column="5"
            android:layout_row="2"
            android:text="m-" />

        <Button
            android:id="@+id/zero"
            android:layout_column="0"
            android:layout_row="3"
            android:text="0" />
        <Button
            android:id="@+id/negative"
            android:layout_column="1"
            android:layout_row="3"
            android:text="﹢/﹣" />

        <Button
            android:id="@+id/dot"
            android:layout_column="2"
            android:layout_row="3"
            android:text="." />

        <Button
            android:id="@+id/plus"
            android:layout_column="3"
            android:layout_row="3"
            android:text="＋" />
        <Button
            android:id="@+id/equal"
            android:layout_column="4"
            android:layout_row="3"
            android:text="＝" />
        <Button
            android:id="@+id/mr"
            android:layout_column="5"
            android:layout_row="3"
            android:text="mr" />


    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/log"
            android:layout_column="0"
            android:layout_row="0"
            android:text="㏒" />
        <Button
            android:id="@+id/sin"
            android:layout_column="1"
            android:layout_row="0"
            android:text="sin" />
        <Button
            android:id="@+id/cos"
            android:layout_column="2"
            android:layout_row="0"
            android:text="cos" />
        <Button
            android:id="@+id/tan"
            android:layout_column="3"
            android:layout_row="0"
            android:text="tan" />
        <Button
            android:id="@+id/ln"
            android:layout_column="0"
            android:layout_row="1"
            android:text="㏑" />
        <Button
            android:id="@+id/factorial"
            android:layout_column="1"
            android:layout_row="1"
            android:text="x!" />
        <Button
            android:id="@+id/sqrt"
            android:layout_column="2"
            android:layout_row="1"
            android:text="√" />
        <Button
            android:id="@+id/e"
            android:layout_column="3"
            android:layout_row="1"
            android:text="e^x" />
        <Button
            android:id="@+id/reciprocal"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1/x" />
        <Button
            android:id="@+id/square"
            android:layout_column="1"
            android:layout_row="2"
            android:text="x²" />
        <Button
            android:id="@+id/cube"
            android:layout_column="2"
            android:layout_row="2"
            android:text="x³" />
        <Button
            android:id="@+id/power"
            android:layout_column="3"
            android:layout_row="2"
            android:text="x^y" />
    </GridLayout>

</LinearLayout>